class Solution {
    public String minRemoveToMakeValid(String s) {
        char[] chars = s.toCharArray();
        int open = 0;
        for(int i = 0; i < chars.length; i++){
            char c = chars[i];
            if(c == '('){
                open++;
            } else if(c == ')'){
                if(open == 0){
                    chars[i] = '*';
                } else {
                    open--;
                }
            }
        }
        for(int i = chars.length - 1; i >= 0 && open > 0; i--){
            if(chars[i] == '('){
                chars[i] = '*';
                open--;
            }

        }
        StringBuilder result = new StringBuilder();
        for(char c : chars){
            if(c != '*'){
                result.append(c);
            }
        }
        return result.toString();
    }
}
